               $(document).on('click',"#dept_select",function(){
                    var num = $(this).children('#num').val();
                    winopen("http://{$_SERVER['SERVER_NAME']}/index.php?m=&c=dept&a=winpop3&num="+num, 560, 470);
                 });
               $(document).on('click',"#company_select",function(){
                    var c_num = $(this).children('#c_num').val();
                    winopen("http://{$_SERVER['SERVER_NAME']}/index.php?m=&c=dept&a=winpop4&num="+c_num, 560, 470);
                 });
               function save(){
                   if (check_form("form_data")) {
                       var vars = $("#form_data").serialize();
                       $.ajax({
                           url:"{:U('save')}",
                           data:vars,
                           type: 'POST',
                           timeout: 2000,
                           cache: false,
                           error: function() {
                                    alert("添加出错！");
                            },
                            success: function(data) {
                                if (data.status) {
                                        ui_alert(data.info, function() {
                                                parent.location.reload(true);
                                                myclose();
						});
					} else {
						ui_error(data.info);
                                                myclose();
                                }
                            }
                       });
                   }
               }
